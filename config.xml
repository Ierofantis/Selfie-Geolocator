<?xml version='1.0' encoding='utf-8'?>
<widget id="com.app.selfie" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SelfieMe</name>
    <description>
        A selfie app
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/images/camera.png" />
        <icon density="mdpi" src="www/images/camera.png" />
        <icon density="hdpi" src="www/images/camera.png" />
        <icon density="xhdpi" src="www/images/camera.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-camera" spec="git+https://github.com/apache/cordova-plugin-camera.git" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3" />
    <plugin name="cordova-plugin-save-image" spec="^0.2.6" />
    <plugin name="cordova-save-image-gallery" spec="0.0.26" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
</widget>
